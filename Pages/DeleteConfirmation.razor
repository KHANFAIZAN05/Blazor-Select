
@if (DisplayModel)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show" style="display:block" aria-modal="true" role="dialog" id="exampleModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@ModalTitle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick=@Close></button>
                </div>
                <div class="modal-body">
                    @ModalBody
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick=@Close>Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick=@Close>Confirm</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string? ModalTitle { get; set; }
    [Parameter] public string? ModalBody { get; set; }

    public bool DisplayModel = false;


    public void Open()
    {
        DisplayModel = true;
        StateHasChanged();


    }
    public void Close()
    {
        DisplayModel = false;
        StateHasChanged();
    }

}